# Load Packages ----
suppressPackageStartupMessages({
  library(SpatialExperiment)
  library(tidyverse)
  library(spatialLIBD)
  library(here)
  library(scater)
  library(sessioninfo)
})

# Load Data ----
## Load Spe ----
spe <- readRDS(
  here::here(
    "processed-data", "rds", "01_build_spe",
    "test_raw_spe_w_spg_N63.rds"
  )
)

## Load outlier keys ----
outlier_spots_key <- readRDS(here("processed-data/visium_qc/outlier_key_ngb_36.rds"))

## Merge data together ----
# TODO: edit this section to make it more compatible with
spe$outlier <- FALSE
spe$outlier[spe$key %in% outlier_spots_key] <- TRUE
spe$outlier <- factor(spe$outlier)

## Remove out-tissue spots
spe <- spe[, spe$in_tissue == TRUE]


sum(is.na(spe$outlier))

# Spot plot of outlier ----
vis_grid_clus(
  spe,
  clustervar = "outlier",
  spatial = FALSE,
  pdf_file = here(
    "plots/02_visium_qc/spot_plot_outliers.pdf"
  ),
  sample_order = unique(spe$sample_id) |> sort(),
  height = 1056,
  width = 816,
  point_size = 0.8
)

# Session Info ----
session_info()
